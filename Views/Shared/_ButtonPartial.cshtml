@model int
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!--
    
    Creating a Partial view of Buttons (Enabling to reuse this button view anywhere in the project)

-->
<td style="width: 150px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="ProductTypes" class="btn btn-primary" asp-route-id="@Model">EDIT</a>
        <a asp-action="Edit" asp-controller="ProductTypes" class="btn btn-success" asp-route-id="@Model">DETAILS</a>
        <a asp-action="Edit" asp-controller="ProductTypes" class="btn btn-danger" asp-route-id="@Model">DELETE</a>
    </div>
</td>
